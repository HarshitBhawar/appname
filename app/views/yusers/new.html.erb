<h1>registration</h1>

<%= form_with model: @yuser do |form| %>
 
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %><br>
    <% @yuser.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :username %><br>
    <%= form.text_field :username %><br>
    <% @yuser.errors.full_messages_for(:username).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

    <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %><br>
    <% @yuser.errors.full_messages_for(:password).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %><br>
    <% @yuser.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :phone %><br>
    <%= form.text_field :phone %><br>
    <% @yuser.errors.full_messages_for(:phone).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  
  <div>
    <%= form.submit %>
  </div>
<% end %>